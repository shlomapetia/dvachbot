{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "nixpacks",
    "nixpacksPlan": {
      "providers": [
        {
          "python": {
            "version": "3.13.5"
          }
        }
      ],
      "phases": {
        "build": {
          "commands": [
            "pip install -r requirements.txt"
          ]
        },
        "start": {
          "commands": [
            "python main.py"
          ]
        }
      }
    }
  },
  "deploy": {
    "restartPolicy": {
      "policy": "on-failure",
      "maxRetries": 3
    },
    "paths": {
      "exclude": ["**/*.json", "**/*.txt"]
    }
  }
}
